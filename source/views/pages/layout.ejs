    <!--<link rel="apple-touch-icon" href="assets/ico/bootstrap-apple-57x57.png">-->
    <link rel="apple-touch-icon" sizes="72x72" href="/favicon.png">
    <!--<link rel="apple-touch-icon" sizes="114x114" href="assets/ico/bootstrap-apple-114x114.png">-->
</head>

  <body data-spy="scroll" data-target=".subnav" data-offset="50">

    <!-- Topbar
    ================================================== -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <a class="pull-right" href="/rss.xml"><img src="/img/buttons/rss.png" /></a>
          <a class="pull-right" href="http://twitter.com/haroopress" target="_blank"><img src="/img/buttons/twitter.png" /></a>

          <div class="nav-collapse">
            <ul class="nav">
              <li>
                <a href="/">Home</a>
              </li>
              <li>
                <a href="/archives">Archives</a>
              </li>
                <%- partial('plugins/pages', { pages: pages }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%- body %>

    <%- partial('plugins/footer', config) %>

    <!-- Le javascript -->
    <!--<script src="/js/lib/require.1.0.4.js"></script>-->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/prettify.js"></script>
    <script src="/js/apps/toc.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
        $('pre > code').parent().addClass('prettyprint linenums');
        prettyPrint();

        // fix sub nav on scroll
        var $win = $(window)
          , $nav = $('.subnav')
          , navTop = $('.subnav').length && $('.subnav').offset().top - 40
          , isFixed = 0

        processScroll()

        $win.on('scroll', processScroll)

        function processScroll() {
          var i, scrollTop = $win.scrollTop()
          if (scrollTop >= navTop && !isFixed) {
            isFixed = 1
            $nav.addClass('subnav-fixed')
          } else if (scrollTop <= navTop && isFixed) {
            isFixed = 0
            $nav.removeClass('subnav-fixed')
          }
        }


    </script>
    <%- partial('plugins/google-analysis', config.plugins.google) %>
    </body>
</html>
